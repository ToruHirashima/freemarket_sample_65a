-# ログイン画面
.User-Account-page
  .User-Account-page__content
    .User-contents
      %h2.User-contents__head
        商品送付先住所入力
      = form_for @address do |f|
        = render 'devise/shared/error_messages', { resource: @address }
        .User-field
          .User-field__label
            = f.label :name, "お名前(全角)"
          %span.User-field__require
            必須
          .User-field__input
            = f.text_field :family_name, placeholder: '例)山田', autofocus: true, class: 'User-field__input--sminner'
            = f.text_field :first_name, placeholder: '例)太郎', autofocus: true, class: 'User-field__input--sminner'
        .User-field
          .User-field__label
            = f.label :name, "お名前カナ(全角)"
          %span.User-field__require
            必須
          .User-field__input
            = f.text_field :family_name_kana, placeholder: '例)ヤマダ', autofocus: true, class: 'User-field__input--sminner'
            = f.text_field :first_name_kana, placeholder: '例)タロウ', autofocus: true, class: 'User-field__input--sminner'
        .User-field
          .User-field__label
            = f.label :zip_code, "郵便番号"
          %span.User-field__require
            必須
          .User-field__input
            = f.text_field :zip_code, placeholder: '例)123-4567', autofocus: true, class: 'User-field__input--inner'
        .User-field
          .User-field__label
            = f.label :prefecture, "都道府県"
          %span.User-field__require
            必須
          .User-field__input
            = f.text_field :prefecture, placeholder: '例)東京都', class: 'User-field__input--inner'
        .User-field
          .User-field__label
            = f.label :city, "市区町村"
          %span.User-field__require
            必須
          .User-field__input
            = f.text_field :city, placeholder: '例)港区', class: 'User-field__input--inner'
        .User-field
          .User-field__label
            = f.label :adress1, "番地"
          %span.User-field__require
            必須
          .User-field__input
            = f.text_field :adress1, placeholder: '例)青山1-1-1', class: 'User-field__input--inner'
        .User-field
          .User-field__label
            = f.label :adress2, "建物名"
          %span.User-field__require
            任意
          .User-field__input
            = f.text_field :adress2, placeholder: '例)アジアビル901', class: 'User-field__input--inner'
        .User-field
          .User-field__label
            = f.label :telephone, "電話番号"
          %span.User-field__require
            任意
          .User-field__input
            = f.text_field :telephone, placeholder: '例)09012345678', class: 'User-field__input--inner'
          .User-actions
          = f.submit "次へ進む", class: 'User-actions__btn'